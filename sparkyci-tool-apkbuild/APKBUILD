package() {
	#set -x	
	ls -l	
	RAKUDO_RERESOLVE_DEPENDENCIES=0 /usr/share/rakudo/tools/install-dist.raku \
		--to="$pkgdir"/usr/share/rakudo/vendor --for=vendor
	install -Dvm644 META6.json README.md \
		-t "$pkgdir"/usr/share/doc/"$pkgname"

}
